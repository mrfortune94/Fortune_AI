<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/chatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#111111"
            android:padding="8dp" />
    </ScrollView>

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Talk to Grok babe..."
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send filthy message" />

    <EditText
        android:id="@+id/imagePromptInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prompt for Grok babe pic (explicit OK)"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333" />

    <Button
        android:id="@+id/generateImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate XXX Grok pic" />

    <ImageView
        android:id="@+id/generatedImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />
</LinearLayout>
